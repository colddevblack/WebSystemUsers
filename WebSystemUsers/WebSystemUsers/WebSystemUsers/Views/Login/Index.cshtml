@model WebSystemUsers.Models.UsuarioModel

@{
    Layout = "_Layout_4";
}

<h3>Seja bem Vindo a tela de Login</h3>

<h2>Login</h2>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Login</h5>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm("Index", "Login"))
                    {
                        <div class="row">
                           
                            <div class="col-lg-6">
                                @Html.LabelFor(obj => obj.email)
                                @Html.TextBoxFor(obj => obj.email, new { @class = "form-control" })
                            </div>

                            <div class="col-lg-3">
                                @Html.LabelFor(obj => obj.senha)
                                @Html.TextBoxFor(obj => obj.senha, new { @class = "form-control"})
                            </div>


                        </div>
                       
                        <div>
                            <input type="submit" value="Login" class="btn btn-warning" />

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>