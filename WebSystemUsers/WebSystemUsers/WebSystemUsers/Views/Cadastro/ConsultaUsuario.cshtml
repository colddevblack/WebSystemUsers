<h2>Consulta Usarios</h2>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Lista de usuários</h5>
                </div>
                <div class="ibox-content">
                    <table class="table">
                        <tr>
                            <td>ID Usuário</td>
                            <td>Nome Usuário </td>
                            <td>E-mail</td>
                            <td>Tipo</td>
                            <td>Status</td>
                       
                            <td>menu editar</td>
                            <td>menu apagar</td>
                        </tr>
                        @foreach (var item in Model)

                        {
                    <tr>
                        <td>@item.id</td>
                        <td>@item.nome</td>
                        <td>@item.email</td>
                        <td>@item.tiposid</td>
                        <td>@item.status</td>
                        <td>@Html.ActionLink("Editar Usuario", "EditarUsuario", "Cadastro", new { id = item.id }, new { @class = "btn btn-warning btn-sm" })</td>
                        <td>@Html.ActionLink("Apagar Usuario", "DeletarUsuario", "Cadastro", new { id = item.id }, new { @class = "btn btn-danger btn-sm" })</td>
                    </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>